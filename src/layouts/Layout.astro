---
import '../styles/global.css'

// Ajusta estos valores si tienes el dominio/imagen final:
const siteUrl  = Astro.site?.href ?? 'https://tu-dominio.com'
const imageUrl = '/meta-banner.jpg'
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>Cumbre Sinergética | Mérida, Yucatán — 15 de noviembre</title>
    <meta name="description" content="Un día para vender más, liderar con impacto, potenciar tu marca y crear conexiones reales. Cumbre Sinergética en Mérida, Yucatán. ¡Boletos disponibles!">

    <!-- SEO -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={siteUrl} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content="Cumbre Sinergética | Mérida, Yucatán — 15 de noviembre" />
    <meta property="og:description" content="Vende más, lidera con impacto y crea conexiones que abren oportunidades reales. Consigue tus boletos." />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Cumbre Sinergética" />
    <meta name="twitter:description" content="Formación y networking en Mérida. Un día para impulsar tu negocio." />
    <meta name="twitter:image" content={imageUrl} />
    
    <!-- Fuentes y AOS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <!-- Meta Pixel Code (PageView only) -->
    <script is:inline>
      !function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;
      n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];
      t=b.createElement(e);t.async=!0;t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '2178875679294428');
      fbq('track', 'PageView');
    </script>
    <noscript>
      <img height="1" width="1" style="display:none"
           src="https://www.facebook.com/tr?id=2178875679294428&ev=PageView&noscript=1" />
    </noscript>
    <!-- End Meta Pixel Code -->
  </head>

  <body class="bg-dark text-white font-light" style="min-height: 100vh; margin:0;">
    <!-- Fondo estático (rosa -> rojo) -->
    <div 
      class="fixed inset-0 -z-10 h-full w-full"
      style="background: radial-gradient(125% 125% at 50% 10%, #000 40%, #dc2626 100%);"
    ></div>

    <slot />

    <!-- Scripts -->
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script is:inline> AOS.init(); </script>
  </body>
</html>

<style>
  html, body { margin: 0; width: 100%; height: 100%; }
</style>
