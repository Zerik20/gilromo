---
/**
 * Layout base del sitio.
 * IMPORTANTE: ajusta la ruta del CSS si tu archivo no está en src/styles/global.css
 */
import "../styles/global.css"; // <- Asegúrate que éste sea tu CSS con @tailwind base, components, utilities

import Navbar from "../components/Navbar.astro";

export interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}
const {
  title = "Sitio",
  description = "Página",
  noindex = false,
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex,nofollow" />}
    <link rel="icon" href="/favicon.ico" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>
  <Navbar />
  <body class="min-h-dvh bg-neutral-950 text-white antialiased">
    <!-- Fondo estático (rosa -> rojo) -->
    <div 
      class="fixed inset-0 -z-10 h-full w-full"
      style="background: radial-gradient(125% 125% at 50% 10%, #000 40%, #dc2626 100%);"
      data-aos="fade-in"
      data-aos-duration="1200"
    ></div>
    <!-- Fondo sutil global opcional -->
    <div class="pointer-events-none fixed inset-0 -z-10 opacity-30"
         style="background:
            radial-gradient(90% 70% at 50% 0%, rgba(212,175,55,.12) 0%, transparent 60%),
            radial-gradient(90% 80% at 100% 100%, rgba(127,29,29,.18) 0%, transparent 60%);"
         data-aos="fade-in"
         data-aos-delay="200"
         data-aos-duration="1200"
    ></div>

    <slot />

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  </body>
</html>
