---
/**
 * Layout base del sitio.
 * IMPORTANTE: ajusta la ruta del CSS si tu archivo no está en src/styles/global.css
 */
import "../styles/global.css"; // <- Debe contener @tailwind base, components, utilities

import Navbar from "../components/Navbar.astro";

export interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}
const {
  title = "Sitio",
  description = "Página",
  noindex = false,
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex,nofollow" />}
    <link rel="icon" href="/favicon.ico" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>
  <body>
     <!-- Fondo estático (rosa -> rojo) -->
    <div 
      class="fixed inset-0 -z-10 h-full w-full"
      style="background: radial-gradient(125% 125% at 50% 10%, #000 40%, #dc2626 100%);"
    ></div>
    <Navbar />
    <slot />
     <!-- Scripts -->
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script is:inline> AOS.init(); </script>
  </body>
</html>
