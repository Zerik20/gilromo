---
// AboutMe.astro
export interface Props {
  title?: string
  name?: string
  bullets?: string[]
  tagline?: string
  portraitSrc?: string
  portraitAlt?: string
  logoSrc?: string | null
  reverse?: boolean // true => foto a la derecha en desktop
}

const {
  title = 'Sobre mí',
  name = 'GILDARDO ROMO VARGAS',
  bullets = [
    'Empresario, Inversionista.',
    'Lic. en Comunicación',
    'CEO de GR Conexión',
    'CEO de Gil Romo Bienes Raíces',
    'Host del Podcast en Conexión',
  ],
  tagline = 'GR Conexión es una promotora de eventos de alto contenido.',
  portraitSrc = '/img/GilRomoAbout.jpg',
  portraitAlt = 'Retrato',
  logoSrc = null,
  reverse = false,
} = Astro.props
---

<section id="sobre-mi" class="relative py-14 sm:py-20">
  <!-- (QUITADO) halo de sección que oscurecía el fondo -->

  <div class="container-balanced">
    <div
      class={`grid items-center gap-10 lg:gap-14
              ${reverse ? 'lg:grid-cols-[1.05fr_1fr]' : 'lg:grid-cols-[1fr_1.05fr]'}`}
    >
      <!-- Imagen (más pequeña, transparente, con brillo dorado exterior) -->
      <figure class={`order-1 ${reverse ? 'lg:order-2' : 'lg:order-1'} mx-auto w-full
                      max-w-[240px] sm:max-w-[280px] md:max-w-[320px] lg:max-w-[360px] xl:max-w-[400px]`}>
        <div class="relative overflow-visible isolate">
          <!-- Brillo dorado exterior (no crea halo negro) -->
          <div
            aria-hidden="true"
            class="pointer-events-none absolute -inset-8 -z-10 blur-2xl opacity-80 mix-blend-screen"
            style="background:
              radial-gradient(60% 55% at 50% 45%,
                rgba(231,198,90,0.50) 0%,
                rgba(231,198,90,0.22) 40%,
                rgba(231,198,90,0.10) 60%,
                transparent 75%);">
          </div>

          <!-- Marco totalmente transparente, sin sombras -->
          <img
            src={portraitSrc}
            alt={portraitAlt}
            class="block w-full h-auto object-cover aspect-[4/5] rounded-[2.25rem]"
            loading="lazy"
            decoding="async"
          />
        </div>
      </figure>

      <!-- Texto -->
      <div class={`order-2 ${reverse ? 'lg:order-1' : 'lg:order-2'} max-w-2xl mx-auto`}>
        {logoSrc && (
          <div class="mb-5 flex items-center gap-3">
            <img src={logoSrc} alt="Logotipo" class="h-12 w-auto opacity-90" loading="lazy" />
          </div>
        )}

        <p class="text-sm tracking-[.3em] uppercase text-white/70 mb-2">{title}</p>

        <h2 class="font-['Playfair_Display'] text-white text-3xl/tight sm:text-4xl/tight font-semibold">
          {name}
        </h2>

        <div class="mt-4 h-[3px] w-20 rounded-full bg-gold-500"></div>

        <ul class="mt-6 space-y-3 text-white/95">
          {bullets.map((b) => (
            <li class="flex items-start gap-3">
              <span class="mt-[7px] inline-block h-1.5 w-1.5 rounded-full bg-gold-500"></span>
              <span class="text-lg">{b}</span>
            </li>
          ))}
        </ul>

        <p class="mt-8 text-xl font-semibold text-white/90">
          {tagline}
        </p>
      </div>
    </div>
  </div>
</section>
